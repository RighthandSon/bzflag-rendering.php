{
    "name": "allejo/bzflag-rendering.php",
    "description": "A library for rendering thumbnails of BZFlag worlds",
    "type": "library",
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "allejo/bzflag-networking.php": "^1.1.0",
        "meyfa/php-svg": "^0.9.1"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan": "^1.5.6",
        "phpunit/phpunit": "^7.0",
        "symfony/finder": "^5.4"
    },
    "suggest": {
        "ext-imagick": "Needed to export thumbnails as PNGs"
    },
    "autoload": {
        "psr-4": {
            "allejo\\bzflag\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "allejo\\bzflag\\test\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Vladimir \"allejo\" Jimenez",
            "email": "me@allejo.io"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    },
    "scripts": {
        "post-install-cmd": "[ -d tools/ ] && composer install --working-dir=tools/php-cs-fixer || exit 0",
        "fix": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v",
        "stan": "phpstan analyse -c phpstan.neon.dist",
        "test": "phpunit"
    }
}
